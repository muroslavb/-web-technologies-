# =========================
# üåê Web Front-End Code Style (HTML + CSS + JS)
# =========================

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# -------------------------
# HTML
# -------------------------
[*.html]
indent_size = 2
insert_final_newline = true
quote_type = double
trim_trailing_whitespace = true

# –í–∏—Ä—ñ–≤–Ω—é–≤–∞–Ω–Ω—è –∞—Ç—Ä–∏–±—É—Ç—ñ–≤ (WebStorm —á–∏—Ç–∞—î —Ü–µ —á–µ—Ä–µ–∑ Code Style ‚Üí HTML)
ij_html_align_attributes = true
ij_html_align_text = false
ij_html_quote_style = double
ij_html_keep_blank_lines = 1
ij_html_space_around_equals_in_attribute = false
ij_html_wrap_attributes = aligned-multiple
ij_html_keep_line_breaks = true
ij_html_wrap_text = normal

# -------------------------
# CSS
# -------------------------
[*.css]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# –í–∏—Ä—ñ–≤–Ω—é–≤–∞–Ω–Ω—è —Ç–∞ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ CSS
ij_css_align_multiline_properties = true
ij_css_blank_lines_around_rules = 1
ij_css_space_after_colon = true
ij_css_space_before_opening_brace = true
ij_css_new_line_before_opening_brace = true
ij_css_new_line_after_opening_brace = true
ij_css_new_line_before_closing_brace = true
ij_css_align_closing_brace_with_properties = true

# –ü–æ—Ä—è–¥–æ–∫ –≤–ª–∞—Å—Ç–∏–≤–æ—Å—Ç–µ–π (WebStorm –≤—Ä–∞—Ö–æ–≤—É—î —Ü–µ, —è–∫—â–æ –≤—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ Stylelint –∞–±–æ Code Style CSS)
ij_css_property_order = position, top, right, bottom, left, display, flex, align-items, justify-content, width, height, margin, padding, font, color, background, border, border-radius, transition, animation

# -------------------------
# SCSS
# -------------------------
[*.scss]
indent_size = 2
max_line_length = 120
ij_scss_align_multiline_properties = true

# -------------------------
# JavaScript / TypeScript
# -------------------------
[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# -------------------------
# JSON
# -------------------------
[*.json]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# -------------------------
# Markdown
# -------------------------
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true


# –ì–ª–æ–±–∞–ª—å–Ω—ñ –Ω–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è –¥–ª—è –≤—Å—ñ—Ö —Ç–∏–ø—ñ–≤ —Ñ–∞–π–ª—ñ–≤
[*]
# –ö–æ–¥—É–≤–∞–Ω–Ω—è —Ñ–∞–π–ª—ñ–≤, —è–∫ –∑–∞–∑–Ω–∞—á–µ–Ω–æ –≤ –ø—Ä–∞–≤–∏–ª–∞—Ö –¥–ª—è HTML
charset = utf-8

# –°—Ç–∏–ª—å –ø–µ—Ä–µ–Ω–æ—Å—ñ–≤ —Ä—è–¥–∫—ñ–≤ (lf - Line Feed, —Å—Ç–∞–Ω–¥–∞—Ä—Ç –¥–ª—è Unix-–ø–æ–¥—ñ–±–Ω–∏—Ö —Å–∏—Å—Ç–µ–º —Ç–∞ –≤–µ–±—Ä–æ–∑—Ä–æ–±–∫–∏)
end_of_line = lf

# –í–∏–¥–∞–ª—è—Ç–∏ –ø—Ä–æ–±—ñ–ª–∏ –≤ –∫—ñ–Ω—Ü—ñ —Ä—è–¥–∫—ñ–≤ –¥–ª—è —á–∏—Å—Ç–æ—Ç–∏ –∫–æ–¥—É
trim_trailing_whitespace = true

# –í—Å—Ç–∞–≤–ª—è—Ç–∏ –ø–æ—Ä–æ–∂–Ω—ñ–π —Ä—è–¥–æ–∫ –≤ –∫—ñ–Ω—Ü—ñ —Ñ–∞–π–ª—É, —â–æ —î —Ö–æ—Ä–æ—à–æ—é –ø—Ä–∞–∫—Ç–∏–∫–æ—é
insert_final_newline = true

# –ù–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è –¥–ª—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–∏—Ö —Ñ–∞–π–ª—ñ–≤ –≤–µ–±—Ä–æ–∑—Ä–æ–±–∫–∏
[*.{html,css,js,json,md}]
# –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–≤–∞—Ç–∏ –ø—Ä–æ–±—ñ–ª–∏ –¥–ª—è –≤—ñ–¥—Å—Ç—É–ø—ñ–≤, —è–∫ –≤–∫–∞–∑–∞–Ω–æ –¥–ª—è HTML —Ç–∞ CSS
indent_style = space

# –†–æ–∑–º—ñ—Ä –≤—ñ–¥—Å—Ç—É–ø—É - 2 –ø—Ä–æ–±—ñ–ª–∏, –∑–≥—ñ–¥–Ω–æ –∑ –ø—Ä–∞–≤–∏–ª–∞–º–∏
indent_size = 2